<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bi"
    tools:context=".reclamations.Ajoutreclamation">

  <TextView
      android:id="@+id/selectedProductTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="16dp"
      android:text="Produit sélectionné : "
      android:textSize="18sp" />

  <EditText
      android:id="@+id/productNameEditText"
      android:layout_below="@id/selectedProductTextView"
      android:layout_width="300dp"
      android:layout_height="60dp"
      android:layout_marginStart="50dp"
      android:layout_marginTop="30dp"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="16dp"
      android:background="@drawable/dt"
      android:ems="10"
      android:hint="Nom du produit"
      android:paddingLeft="20sp"
      android:textColor="#FFF"
      android:textSize="20sp"
      android:inputType="none"
      android:enabled="false" />

  <EditText
      android:id="@+id/reclamationDescriptionEditText"
      android:layout_below="@id/productNameEditText"
      android:layout_width="300dp"
      android:layout_height="60dp"
      android:layout_marginStart="50dp"
      android:layout_marginTop="30dp"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="16dp"
      android:background="@drawable/dt"
      android:ems="10"
      android:hint="Description"
      android:inputType="textMultiLine"
      android:paddingLeft="20sp"
      android:textColor="#FFF"
      android:textSize="20sp" />
  <EditText
      android:id="@+id/titrereclamation"
      android:layout_below="@id/reclamationDescriptionEditText"
      android:layout_width="300dp"
      android:layout_height="60dp"
      android:layout_marginStart="50dp"
      android:layout_marginTop="30dp"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="16dp"
      android:background="@drawable/dt"
      android:ems="10"
      android:hint="Description"
      android:inputType="textMultiLine"
      android:paddingLeft="20sp"
      android:textColor="#FFF"
      android:textSize="20sp" />

  <Button
      android:id="@+id/sendReclamationButton"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/titrereclamation"
      android:layout_margin="16dp"
      android:text="Envoyer la réclamation" />

</RelativeLayout>
