<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:rotationX="360"
    >

    <TextView
        android:id="@+id/textViewTitre"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50sp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/dt"
        android:ems="10"
        android:hint="Adresse"
        android:paddingLeft="20sp"
        android:text="Titre : "
        android:textColor="#FFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewAdresse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewAdresse" />

    <TextView
        android:id="@+id/textViewAdresse"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/textViewTitre"
        android:layout_margin="16dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50sp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/dt"
        android:ems="10"
        android:paddingLeft="20sp"
        android:text="Adresse : "
        android:textColor="#FFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewDescription"

        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/textViewAdresse"
        android:layout_margin="16dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50sp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/dt"
        android:ems="10"
        android:paddingLeft="20sp"
        android:text="Description : "
        android:textColor="#FFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewAdresse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewAdresse" />

    <TextView
        android:id="@+id/textViewType"

        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/textViewDescription"
        android:layout_margin="16dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50sp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/dt"
        android:ems="10"
        android:hint="Adresse"
        android:paddingLeft="20sp"
        android:text="Type : "
        android:textColor="#FFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewAdresse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewAdresse" />

    <TextView
        android:id="@+id/textViewstatus"

        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/textViewType"
        android:layout_margin="16dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50sp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/dt"
        android:ems="10"
        android:hint="Adresse"
        android:paddingLeft="20sp"
        android:text="Type : "
        android:textColor="#FFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewAdresse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewAdresse" />


</RelativeLayout>