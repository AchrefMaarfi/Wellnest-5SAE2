<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bi"

    tools:context=".admin.Details_reclamation">
    <TextView
        android:id="@+id/titrereclamation"
        android:layout_margin="16dp"
        android:text="Titre : "
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="50sp"
        android:ems="10"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:paddingLeft="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/dt"/>

    <TextView
        android:id="@+id/descriptionreclamation"
        app:layout_constraintTop_toBottomOf="@id/titrereclamation"
        android:layout_margin="16dp"
        android:text="Description : "
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="50sp"
        android:ems="10"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:paddingLeft="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/dt"/>
    <TextView
        android:id="@+id/usernamereclamtion"

        app:layout_constraintTop_toBottomOf="@id/descriptionreclamation"
        android:layout_margin="16dp"
        android:text="Username : "
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="50sp"
        android:ems="10"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:paddingLeft="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/dt"/>
    <TextView
        android:id="@+id/titre_prod_reclamation"
        android:layout_margin="16dp"
        android:text="Nom produit : "
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="50sp"
        android:ems="10"
        android:textColor="#FFF"
        android:hint="Adresse"
        android:textSize="20sp"
        android:paddingLeft="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/dt"
        app:layout_constraintTop_toBottomOf="@id/usernamereclamtion"
/>


    <Button
        android:id="@+id/boutonSupprimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supprimer"
        app:layout_constraintTop_toBottomOf="@id/titre_prod_reclamation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>