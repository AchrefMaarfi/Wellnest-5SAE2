<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bi"
    tools:context=".produits.Fdetails_produits">

    <TextView
        android:id="@+id/textViewNomProduit"
        android:layout_margin="16dp"
        android:text="Nom : "
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="50sp"
        android:ems="10"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:paddingLeft="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/dt" />

    <TextView
        android:id="@+id/textViewMarqueProduit"
        android:layout_below="@+id/textViewNomProduit"
        android:layout_margin="16dp"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="50sp"
        android:ems="10"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:paddingLeft="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/dt"
        android:text="Marque du produit : " />

    <TextView
        android:id="@+id/textViewPrixProduit"
        android:layout_margin="16dp"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="50sp"
        android:ems="10"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:paddingLeft="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/dt"
        android:layout_below="@+id/textViewMarqueProduit"
        android:text="Prix du produit : " />

    <TextView
        android:id="@+id/textViewQuantiteProduit"
        android:layout_margin="16dp"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="50sp"
        android:ems="10"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:paddingLeft="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/dt"
        android:layout_below="@+id/textViewPrixProduit"
        android:text="QuantitÃ© du produit : " />

    <Button
        android:id="@+id/buttonmodifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewQuantiteProduit"
        android:layout_marginTop="16dp"
        android:text="Modifier"
         />
    <Button
        android:id="@+id/buttondelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonmodifier"
        android:layout_marginTop="16dp"
        android:text="Supprimer"

        />


  </RelativeLayout>