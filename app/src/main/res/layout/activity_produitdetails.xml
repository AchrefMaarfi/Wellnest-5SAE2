<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bi"
    >

    <TextView
        android:id="@+id/textViewNomProduit"
        android:layout_margin="16dp"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10sp"
        android:ems="10"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:paddingLeft="20sp"
        android:background="@drawable/dt"
        android:text="Nom du produit : " />

    <TextView
        android:id="@+id/textViewMarqueProduit"
        android:layout_margin="16dp"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10sp"
        android:ems="10"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:paddingLeft="20sp"
        android:background="@drawable/dt"
        android:layout_below="@+id/textViewNomProduit"
        android:text="Marque du produit : " />

    <TextView
        android:id="@+id/textViewPrixProduit"
        android:layout_below="@+id/textViewMarqueProduit"
        android:layout_margin="16dp"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10sp"
        android:ems="10"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:paddingLeft="20sp"
        android:background="@drawable/dt"
        android:text="Prix du produit : " />

    <TextView
        android:id="@+id/textViewQuantiteProduit"
        android:layout_margin="16dp"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10sp"
        android:ems="10"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:paddingLeft="20sp"
        android:background="@drawable/dt"
        android:layout_below="@+id/textViewPrixProduit"
        android:text="Quantité du produit : " />

    <Button
        android:id="@+id/buttonAjouterReclamation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewQuantiteProduit"
        android:layout_marginTop="15dp"
        android:text="Ajouter Réclamation" />

    <Button
        android:id="@+id/buttonAjouterAuPanier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonAjouterReclamation"
        android:layout_marginTop="16dp"
        android:text="Ajouter au Panier"
        android:onClick="onAjouterAuPanierClick" />

    <Button
        android:id="@+id/buttonPanier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:text="Panier" />
</RelativeLayout>
