<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical|center_horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="76dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/logo" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/btn_profile"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="end"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="profile"
            android:drawablePadding="8dp"
            android:padding="8dp"
            app:srcCompat="@drawable/person_icon" />
    </LinearLayout>

    <!-- Scrollable Services Section -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/white"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Service Buttons -->
            <Button
                android:id="@+id/service1Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:paddingHorizontal="16dp"
                android:backgroundTint="@color/teal_200"
                android:text="Resservation"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/service2Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:paddingHorizontal="16dp"
                android:backgroundTint="@color/teal_200"
                android:text="Pharmacie"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/service3Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:backgroundTint="@color/teal_200"
                android:paddingHorizontal="16dp"
                android:text="Event"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/service4Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:paddingHorizontal="16dp"
                android:backgroundTint="@color/teal_200"
                android:text="Forum"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/service5Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:paddingHorizontal="16dp"
                android:backgroundTint="@color/teal_200"
                android:text="Reclamation"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>
